<div class="row-fluid">
  <h1>t+j designs Pinterest Contest</h1>
</div>
<div class="row-fluid">
  <div class="span1"></div>
  <div class="span7">
    <h2>How to enter</h2>
    <ol>
      <li>Follow @tandjdesigns on pinterest <a data-pin-do="bttonFollow" href="http://pinterest.com/tandjdesigns/">tandjdesigns</a> </li>
      <li>Repin the 5 images below</li>
      <li>Fill out an entry form on this page</li>
    </ol>

  </div>
  <div class="span3">
    <h2>Step 3</h2>
    <%= simple_form_for @entry do |f| %>
      <%= f.input :email %>
      <%= f.input :username, label: "Pinterest Username" %>
      <%= f.button :submit %>
    <% end %>
  </div>
  <div class="span1"></div>
</div>
<div class="row-fluid">
<div class="span1"></div>
<div class="span10">
  <img src="<%= image_path("image1.jpg") %>">
  <img src="<%= image_path("image2.jpg") %>">
  <img src="<%= image_path("image3.jpg") %>">
  <img src="<%= image_path("image4.jpg") %>">
  <img src="<%= image_path("image5.jpg") %>">
</div>

<div class="span1"></div>
</div>





<script type="text/javascript">
(function(d){
  var f = d.getElementsByTagName('SCRIPT')[0], p = d.createElement('SCRIPT');
  p.type = 'text/javascript';
  p.async = true;
  p.src = '//assets.pinterest.com/js/pinit.js';
  f.parentNode.insertBefore(p, f);
}(document));
</script>
